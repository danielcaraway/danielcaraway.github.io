   "source": [
    "def get_text_from_file(file):\n",
    "    file = open(file).readlines()\n",
    "    all_text = \"\"\n",
    "    for line in file:\n",
    "        all_text += line\n",
    "\n",
    "    all_text = all_text.replace(\"\\n\", \" \")\n",
    "    all_text = all_text.replace(\"\\'\", \"\")\n",
    "    return all_text\n",
    "\n",
    "all_text = get_text_from_file('HP1.txt')"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
