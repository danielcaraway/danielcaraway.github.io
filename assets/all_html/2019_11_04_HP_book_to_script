    "import re\n",
    "\n",
    "def get_ch1(all_text):\n",
    "    all_text = re.sub(r'[0-9]', '', all_text)\n",
    "    chapters = all_text.split('CHAPTER ')\n",
    "    ch1 = chapters[1]\n",
    "    return ch1\n",
    "\n",
    "ch1 = get_ch1(all_text)"
   ]
  },
